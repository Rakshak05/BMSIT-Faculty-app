rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read and write their own profile pictures
    match /profile_pictures/{userId}.jpg {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read and write their own profile pictures (other formats)
    match /profile_pictures/{userId}.png {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read and write their own profile pictures (jpeg format)
    match /profile_pictures/{userId}.jpeg {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}