<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/text_secondary"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewMeetingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meeting Title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/textViewMeetingDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Date and Time"
            android:textSize="14sp"
            android:textColor="@color/text_secondary" />

        <TextView
            android:id="@+id/textViewMeetingLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Location: Conference Hall"
            android:textColor="@color/text_secondary" />

        <TextView
            android:id="@+id/textViewMeetingAttendees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="For: All Faculty"
            android:textSize="13sp"
            android:textColor="@color/text_secondary" />

        <!-- Added TextView to show who hosted the meeting -->
        <TextView
            android:id="@+id/textViewMeetingHost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Hosted by: "
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:textStyle="italic" />

        <!-- This section will be hidden/shown on click -->
        <LinearLayout
            android:id="@+id/expandedSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            tools:visibility="visible">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSetReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Set a reminder"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <!-- Edit and Cancel buttons for the scheduler -->
            <LinearLayout
                android:id="@+id/layoutSchedulerActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                tools:visibility="visible">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonEditMeeting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Edit"
                    style="@style/Widget.Material3.Button.TonalButton"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonCancelMeeting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:textColor="@color/red_error" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>