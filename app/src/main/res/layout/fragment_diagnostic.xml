<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DiagnosticFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Diagnostics"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/buttonCheckAuth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Check Auth"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonCheckDb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Check DB"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonCreateTestMeeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Test Meeting"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonClearDiagnostics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear Diagnostics"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:drawable/edit_text">

        <TextView
            android:id="@+id/textViewDiagnostic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Diagnostics will appear here..."
            android:textSize="12sp"
            android:fontFamily="monospace" />
    </ScrollView>

</LinearLayout>