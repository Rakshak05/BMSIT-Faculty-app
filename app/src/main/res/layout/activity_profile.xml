<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Use the same toolbar pattern as MainActivity -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_profile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F2F4F8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <!-- Remove the custom toolbar area and use the standard toolbar instead -->

                <!-- Profile Image and Name Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="24dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <!-- Avatar Placeholder (Blue Rounded Square) -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardBackgroundColor="#2D7CB8"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:id="@+id/tvAvatarInitials"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text=""
                                android:textColor="#FFFFFF"
                                android:textSize="40sp"
                                android:textStyle="normal" />
                        </androidx.cardview.widget.CardView>

                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvProfileNameHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="22sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <!-- Section Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="8dp"
                    android:text="Details"
                    android:textColor="#2D7CB8"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="true" />

                <!-- Personal Info Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Name Row (without icon) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Name"
                                android:textColor="#000000"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tvDisplayName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not set"
                                android:textColor="#666666"/>
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                        <!-- Mail id Row (without icon) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Mail id"
                                android:textColor="#000000"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tvAccount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not set"
                                android:textColor="#666666"/>
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                        <!-- Contact No. Row (without icon) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Contact No."
                                android:textColor="#000000"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tvDepartment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not set"
                                android:textColor="#666666"/>
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                        <!-- Department Row (without icon) - Editable in edit mode -->
                        <LinearLayout
                            android:id="@+id/layoutDepartmentEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="8dp"
                            android:visibility="gone">
                            
                            <!-- The Label on the Left -->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:text="Department"
                                android:textColor="#000000"
                                android:textStyle="bold"/>

                            <!-- The Spinner on the Right -->
                            <Spinner
                                android:id="@+id/spinnerDepartment"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:gravity="end"
                                android:textAlignment="textEnd"/>
                        </LinearLayout>

                        <!-- Department Row (without icon) - Display mode -->
                        <LinearLayout
                            android:id="@+id/layoutDepartmentDisplay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Department"
                                android:textColor="#000000"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tvJobTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not set"
                                android:textColor="#666666"/>
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                        <!-- Designation Row (without icon) - Editable in edit mode -->
                        <LinearLayout
                            android:id="@+id/layoutDesignationEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="8dp"
                            android:visibility="gone">

                            <!-- The Label on the Left -->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:text="Designation"
                                android:textColor="#000000"
                                android:textStyle="bold"/>

                            <!-- The Spinner on the Right -->
                            <Spinner
                                android:id="@+id/spinnerDesignation"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:gravity="end"
                                android:textAlignment="textEnd"/>
                        </LinearLayout>

                        <!-- Designation Row (without icon) - Display mode -->
                        <LinearLayout
                            android:id="@+id/layoutDesignationDisplay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Designation"
                                android:textColor="#000000"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tvManager"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not set"
                                android:textColor="#666666"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                
                <!-- Activity Section Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="8dp"
                    android:text="Activity"
                    android:textColor="#2D7CB8"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="true" />
                    
                <!-- Activity Info Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Meetings Attended Row (without icon) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Meetings Attended"
                                android:textColor="#000000"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tvMeetingsAttended"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#666666"
                                android:layout_marginEnd="8dp"/>
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_chevron_right"
                                android:layout_marginEnd="8dp"
                                app:tint="#757575" />
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                        <!-- Meetings Missed Row (without icon) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Meetings Missed"
                                android:textColor="#000000"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tvMeetingsMissed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#666666"
                                android:layout_marginEnd="8dp"/>
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_chevron_right"
                                android:layout_marginEnd="8dp"
                                app:tint="#757575" />
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                        <!-- Total Hours Attended Row (without icon) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Total Hours Attended"
                                android:textColor="#000000"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tvTotalHoursAttended"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00:00 hrs"
                                android:textColor="#666666"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Save Changes Button (Hidden by default, shown only when editing) -->
                <Button
                    android:id="@+id/btn_save_changes"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:text="Save Changes"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <!-- Change Password Button -->
                <Button
                    android:id="@+id/buttonChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="Change Password"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:backgroundTint="#E0E0E0" />

                <!-- Sign Out Button -->
                <Button
                    android:id="@+id/buttonSignOut"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="24dp"
                    android:text="Sign Out"
                    android:textColor="#FF0000"
                    android:textSize="16sp"
                    android:backgroundTint="#E0E0E0" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Navigation View for the side panel -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_profile"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/nav_item_icon_tint"
        app:itemTextColor="@color/nav_item_icon_tint"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>